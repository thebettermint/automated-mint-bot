{
  "extends": "@thebettermint/tsconfig",
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./types/**/*", "./config/config.json"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "noImplicitAny": false,
    "noEmit": false,
    "tsBuildInfoFile": "./dist/tsbuildinfo",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true
  }
}
